{
  "name": "Short",
  "version": "0.0.6",
  "description": "Visit short links with less typing",
  "repository": {
    "type": "git",
    "url": "https://short-d.com/r/extcode"
  },
  "scripts": {
    "build": "yarn prep && yarn cp:assets && tsc",
    "prep": "rm -rf build && mkdir build",
    "dev": "yarn build --watch",
    "cp:assets": "cp -r icons build/ && yarn substenv:manifest",
    "substenv:manifest": "sh -ac '. .env; perl -p -e '\"'\"'s/\\$\\{([^}]+)\\}/defined $ENV{$1} ? $ENV{$1} : $&/eg; s/\\$\\{([^}]+)\\}//eg'\"'\"' manifest.json' > build/manifest.json"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.87",
    "typescript": "^3.5.3"
  }
}
