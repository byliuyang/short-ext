{
  "name": "Short",
  "version": "0.0.4",
  "description": "Visit short links with less typing",
  "repository": {
    "type": "git",
    "url": "https://github.com/byliuyang/short-ext.git"
  },
  "scripts": {
    "build": "yarn prep && yarn cp:assets && tsc",
    "prep": "rm -rf build && mkdir build",
    "dev": "yarn build --watch",
    "cp:assets": "cp -r icons manifest.json build/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
    },
  },
  "devDependencies": {
    "@types/chrome": "^0.0.87",
    "prettier": "1.18.2",
    "typescript": "^3.5.3"
  }
}
